{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "smart-actions-gui",
  "version": "1.0.0",
  "identifier": "com.matteoveroni.smart-actions-gui",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "smart-actions-gui",
        "width": 1024,
        "height": 768
      }
    ],
    "security": {
      "csp": null,
      "capabilities": []
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "audio/*",
      "icons/*"
    ]
  }
}
